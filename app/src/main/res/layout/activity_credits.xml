<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BDBDBB"
   android:gravity="center"
    android:orientation="vertical"
    tools:context=".CREDITS">


    <TextView
        android:id="@+id/tvlanswer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text=""
        android:textColor="#FF1744"
        android:textSize="30dp"
        tools:ignore="Suspicious0dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="BackToCalculate"
        android:text="Back to calculator" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:text="The Calculator made by Dvir Dadon Send Email for support: Dvirpro31@gmail.com"
        android:textColor="#FF1744"
        android:textSize="30dp" />

</LinearLayout>